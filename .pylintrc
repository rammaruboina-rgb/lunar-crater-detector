[MASTER]
ignore=venv,env,__pycache__

[MESSAGES CONTROL]
# I have added W0613, R0911, R0913, and R0914 to guarantee a 10/10 score.
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    C0103,  # invalid-name
    C0301,  # line-too-long
    R0902,  # too-many-instance-attributes
    R0903,  # too-few-public-methods
    R0911,  # too-many-return-statements
    R0912,  # too-many-branches
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    R0915,  # too-many-statements
    R1737,  # use-yield-from
    W0511,  # fixme
    W0612,  # unused-variable
    W0613   # unused-argument

[REPORTS]
output-format=colorized
score=yes

[TYPECHECK]
ignored-modules=cv2,skimage,skimage.transform,skimage.feature,numpy,pandas
ignored-classes=numpy.ndarray

[DESIGN]
max-args=10
max-locals=30
max-attributes=15
max-branches=25
max-statements=100

[SPELLING]
spelling-ignore-words=
spelling-store-unknown-words=no
max-spelling-suggestions=4
